<addons>
<addon id="repository.robloach" name="RobLoach's Addons" version="0.2" provider-name="RobLoach">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="RobLoach's Addons">
    <info compressed="true">http://robloach.github.io/repository.robloach/addons.xml</info>
    <checksum>http://robloach.github.io/repository.robloach/addons.xml.md5</checksum>
    <datadir zip="true">http://robloach.github.io/repository.robloach</datadir>
    <hashes>true</hashes>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>RobLoach's Kodi Addons.</summary>
    <description>Kodi Addons provided by Rob Loach. Includes just Lutris, for now.</description>
    <platform>all</platform>
  </extension>
</addon>
  <addon id="script.lutris" name="Lutris" version="0.1.1" provider-name="Rob Loach">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>game executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Lutris</summary>
        <description lang="en">Open Gaming Platform to install and launch games from Kodi.</description>
        <disclaimer lang="en">For more information, visit Lutris.net.</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <website>http://lutris.net</website>
        <source>http://github.com/robloach/script.lutris</source>
        <platform>linux</platform>
        <language>en</language>
    </extension>
</addon>
</addons>
